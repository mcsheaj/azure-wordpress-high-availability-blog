{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string"
        },
        "storageAccountName": {
            "type": "string"
        },
        "blobContainerName": {
            "type": "string"
        },
        "applicationName": {
            "type": "string",
            "metadata": {
                "description": "The value for the application name tag (e.g. WordPress)."
            }
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "The value for the environment tag (e.g. Production, Test, Development, Demo, ...)."
            }
        }
    },
    "variables": {
        "suffix": "[skip(parameters('vnetName'), 5)]",
        "publicSubnetName": "[concat('subnet-public-', variables('suffix'))]",
        "privateSubnetName": "[concat('subnet-private-', variables('suffix'))]",
        "publicSubnetId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), variables('publicSubnetName'))]",
        "privateSubnetId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), variables('privateSubnetName'))]",
        "publicSubnetEndpointName": "[concat('ep-stor-', variables('publicSubnetName'))]",
        "privateSubnetEndpointName": "[concat('ep-stor-', variables('privateSubnetName'))]",
        "publicSubnetEndpointConnectionName": "[concat(variables('publicSubnetEndpointName'), '-', deployment().name)]",
        "privateSubnetEndpointConnectionName": "[concat(variables('privateSubnetEndpointName'), '-', deployment().name)]",
        "publicSubnetPrivateLinkServiceId": "[concat(resourceGroup().id, '/providers/Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]",
        "privateSubnetPrivateLinkServiceId": "[concat(resourceGroup().id, '/providers/Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]",
        "privateDnsName": "privatelink.blob.core.windows.net"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-04-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[resourceGroup().Location]",
            "sku": {
                "name": "Standard_ZRS"
            },
            "kind": "StorageV2",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            },            
            "tags": {
                "ApplicationName": "[parameters('applicationName')]",
                "Network": "Azure",
                "Environment": "[parameters('environment')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices",
            "apiVersion": "2019-04-01",
            "name": "[concat(parameters('storageAccountName'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "properties": {
                "cors": {
                    "corsRules": []
                },
                "deleteRetentionPolicy": {
                    "enabled": false
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2019-04-01",
            "name": "[concat(parameters('storageAccountName'), '/default/', parameters('blobContainerName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountName'), 'default')]"
            ],
            "properties": {
                "publicAccess": "None"
            }
        },
        {
            "apiVersion": "2019-04-01",
            "name": "[variables('publicSubnetEndpointName')]",
            "type": "Microsoft.Network/privateEndpoints",
            "location": "[resourceGroup().Location]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', parameters('storageAccountName'), 'default', parameters('blobContainerName'))]"
            ],
            "properties": {
                "privateLinkServiceConnections": [
                    {
                        "name": "[variables('publicSubnetEndpointConnectionName')]",
                        "properties": {
                            "privateLinkServiceId": "[variables('publicSubnetPrivateLinkServiceId')]",
                            "groupIds": [
                                "blob"
                            ]
                        }
                    }
                ],
                "manualPrivateLinkServiceConnections": [],
                "subnet": {
                    "id": "[variables('publicSubnetId')]"
                }
            },            
            "tags": {
                "ApplicationName": "[parameters('applicationName')]",
                "Network": "Public",
                "Environment": "[parameters('environment')]"
            }
        },
        {
            "apiVersion": "2019-04-01",
            "name": "[variables('privateSubnetEndpointName')]",
            "type": "Microsoft.Network/privateEndpoints",
            "location": "[resourceGroup().Location]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', parameters('storageAccountName'), 'default', parameters('blobContainerName'))]"
            ],
            "properties": {
                "privateLinkServiceConnections": [
                    {
                        "name": "[variables('privateSubnetEndpointConnectionName')]",
                        "properties": {
                            "privateLinkServiceId": "[variables('privateSubnetPrivateLinkServiceId')]",
                            "groupIds": [
                                "blob"
                            ]
                        }
                    }
                ],
                "manualPrivateLinkServiceConnections": [],
                "subnet": {
                    "id": "[variables('privateSubnetId')]"
                }
            },            
            "tags": {
                "ApplicationName": "[parameters('applicationName')]",
                "Network": "Private",
                "Environment": "[parameters('environment')]"
            }
        },
        {
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "name": "[variables('privateDnsName')]",
            "location": "global",            
            "tags": {
                "ApplicationName": "[parameters('applicationName')]",
                "Network": "Both",
                "Environment": "[parameters('environment')]"
            },
            "properties": {}
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2018-09-01",
            "name": "[concat(variables('privateDnsName'), '/', parameters('vnetName') )]",
            "location": "global",
            "dependsOn": [
                "[variables('privateDnsName')]"
            ],
            "properties": {
                "virtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
                },
                "registrationEnabled": false
            }
        }
    ],
    "outputs": {
        "publicEndPointNicId": {
            "type": "string",
            "value": "[reference(variables('publicSubnetEndpointName')).networkInterfaces[0].id]"
        },
        "privateEndPointNicId": {
            "type": "string",
            "value": "[reference(variables('privateSubnetEndpointName')).networkInterfaces[0].id]"
        }
    }
}