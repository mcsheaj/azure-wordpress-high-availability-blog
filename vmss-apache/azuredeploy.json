{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of the existing virtual network."
            }
        },
        "machineSku": {
            "type": "string",
            "metadata": {
                "description": "The sku for the virtual machine size you want to allocate."
            }
        },
        "desiredCapacity": {
            "type": "string",
            "metadata": {
                "description": "The minimum number of VMs to allocate."
            }
        },
        "applicationName": {
            "type": "string",
            "metadata": {
                "description": "The value for the application name tag (e.g. WordPress)."
            }
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "The value for the environment tag (e.g. Production, Test, Development, Demo, ...)."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The user name for the administrator account to create on each instance."
            }
        },
        "sshPublicKey": {
            "type": "string",
            "metadata": {
                "description": "The public key to authenticate with for the admin account."
            }
        }
    },
    "variables": {
        "setName": "[concat('vmss-apache-', skip(parameters('vnetName'), 5))]",
        "availabilityZones": [
            "1",
            "2"
        ],
        "computerNamePrefix": "[toLower(substring(concat(variables('setName'), uniqueString(resourceGroup().id)), 0, 9))]",
        "subnetId": "[concat(resourceGroup().id, '/providers/Microsoft.Network/virtualNetworks/', parameters('vnetName'), '/subnets/subnet-public-', parameters('vnetName'))]",
        "customData": "[concat('#!/bin/bash -xe', '
            wget --no-cache -O /tmp/bootstrap-apache.sh https://raw.githubusercontent.com/mcsheaj/azure-wordpress-high-availability-blog/master/vmss-apache/scripts/bootstrap-apache.sh
            bash /tmp/bootstrap-apache.sh
            ')]"
    },
    "resources": [
        {
            "name": "[variables('setName')]",
            "type": "Microsoft.Compute/virtualMachineScaleSets",
            "apiVersion": "2019-03-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
            ],
            "sku": {
                "name": "[parameters('machineSku')]",
                "tier": "Standard",
                "capacity": "[int(parameters('desiredCapacity'))]"
            },
            "zones": "[variables('availabilityZones')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "overprovision": true,
                "upgradePolicy": {
                    "mode": "Manual"
                },
                "virtualMachineProfile": {
                    "storageProfile": {
                        "imageReference": {
                            "sku": "18.04-LTS",
                            "publisher": "Canonical",
                            "version": "latest",
                            "offer": "UbuntuServer"
                        },
                        "osDisk": {
                            "createOption": "FromImage",
                            "caching": "ReadWrite"
                        }
                    },
                    "priority": "Regular",
                    "osProfile": {
                        "computerNamePrefix": "[variables('computerNamePrefix')]",
                        "adminUsername": "[parameters('adminUsername')]",
                        "linuxConfiguration": {
                            "disablePasswordAuthentication": true,
                            "ssh": {
                                "publicKeys": [
                                    {
                                        "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                                        "keyData": "[parameters('sshPublicKey')]"
                                    }
                                ]
                            }
                        },
                        "customData": "[base64(variables('customData'))]"
                    },
                    "networkProfile": {
                        "networkInterfaceConfigurations": [
                            {
                                "name": "[concat('nic-', variables('setName'))]",
                                "properties": {
                                    "primary": true,
                                    "ipConfigurations": [
                                        {
                                            "name": "[concat('ipconfig-', variables('setName'))]",
                                            "properties": {
                                                "subnet": {
                                                    "id": "[variables('subnetId')]"
                                                },
                                                "publicIpAddressConfiguration": {
                                                    "name": "[concat('publicip-', variables('setName'))]",
                                                    "properties": {
                                                        "idleTimeoutInMinutes": 15
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                },
                "zoneBalance": false
            },
            "tags": {
                "ApplicationName": "[parameters('applicationName')]",
                "Network": "Public",
                "Environment": "[parameters('environment')]"
            }
        }
    ]
}
